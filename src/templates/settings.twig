{% import '_includes/forms' as forms %}

{{ forms.textField({
	label:        'API Base URL'|t,
	required:     true,
	id:           'apiBaseUrl',
	name:         'apiBaseUrl',
	instructions: 'This is the base URL from which all web service requests are made.'|t,
	value:        settings.apiBaseUrl,
	errors:       settings.getErrors('apiBaseUrl')
}) }}

{{ forms.textField({
	label:        'Web Service Username'|t,
	required:     true,
	id:           'webServiceUsername',
	name:         'webServiceUsername',
	instructions: 'Username given upon creation of the Hobson-Radius Web Service.'|t,
	value:        settings.webServiceUsername,
	errors:       settings.getErrors('webServiceUsername')
}) }}

{{ forms.textField({
	label:        'Web Service Password'|t,
	required:     true,
	id:           'webServicePassword',
	name:         'webServicePassword',
	instructions: 'Password given upon creation of the Hobson-Radius Web Service.'|t,
	value:        settings.webServicePassword,
	errors:       settings.getErrors('webServicePassword')
}) }}
